{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}"
  },
  "npm": {
    "publish": true,
    "publishConfig": {
      "access": "public"
    }
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular"
      },
      "infile": "CHANGELOG.md",
      "header": "# Changelog\n\nAll notable changes to this project will be documented in this file.\n",
      "writerOpts": {
        "groupBy": "type",
        "commitGroupsSort": ["feat", "fix", "perf", "refactor"],
        "commitsSort": "header",
        "noteGroupsSort": "title",
        "commitPartial": "* {{subject}}\n  {{~!-- commit link --}}\n  {{~#if @root.linkReferences~}}\n    ([`{{shortHash}}`]({{commitUrlFormat}})), \n  {{~else~}}\n    {{~shortHash}}, \n  {{~/if~}}\n  {{~!-- commit date --}}\n  {{~#if @root.linkReferences~}}\n    {{~commitDate}}\n  {{~else~}}\n    {{~commitDate}}\n  {{~/if}}\n\n"
      }
    }
  },
  "hooks": {
    "after:bump": "npm run build"
  }
}