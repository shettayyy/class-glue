{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}"
  },
  "npm": {
    "publish": true,
    "publishConfig": {
      "access": "public"
    }
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular"
      },
      "infile": "CHANGELOG.md",
      "header": "# Changelog\n\nAll notable changes to this project will be documented in this file.\n",
      "writerOpts": {
        "groupBy": "type",
        "commitGroupsSort": ["feat", "fix", "perf", "refactor"],
        "commitsSort": "header",
        "noteGroupsSort": "title",
        "commitPartial": "* {{header}} ({{commitDate}}) {{#if @root.linkReferences}}\n  {{~#if scope}} **{{scope}}:**\n  {{~/if}}{{#if subject}}\n    {{~subject}}\n  {{~else}}\n    {{~header}}\n  {{~/if}}\n  {{~#if hash}} {{#if @root.linkReferences}}[`{{shortHash}}`]({{commitUrlFormat}}){{else}}{{shortHash}}{{/if}}{{/if}}\n{{else}}\n  {{~subject}}\n{{/if}}"
      }
    }
  },
  "hooks": {
    "after:bump": "npm run build"
  }
}