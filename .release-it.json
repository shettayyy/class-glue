{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireBranch": "main",
    "requireCleanWorkingDir": false,
    "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
    "requireCommits": true
  },
  "npm": {
    "publish": true,
    "publishConfig": {
      "access": "public"
    }
  },
  "github": {
    "release": true,
    "tokenRef": "GITHUB_TOKEN"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "chore",
            "section": "Chores"
          },
          {
            "type": "docs",
            "section": "Documentation"
          },
          {
            "type": "style",
            "section": "Styles"
          },
          {
            "type": "refactor",
            "section": "Refactors"
          },
          {
            "type": "perf",
            "section": "Performance Improvements"
          },
          {
            "type": "test",
            "section": "Tests"
          },
          {
            "type": "build",
            "section": "Build System"
          },
          {
            "type": "ci",
            "section": "Continuous Integration"
          }
        ]
      },
      "infile": "CHANGELOG.md"
    }
  },
  "hooks": {
    "before:init": [
      "npm run build",
      "npm run test",
      "git status"
    ],
    "after:bump": "npm install"
  }
}